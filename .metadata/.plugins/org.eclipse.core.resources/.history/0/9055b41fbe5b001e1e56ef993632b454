package com.pack;

import java.util.Scanner;

public class practice {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the string: ");
		String s1 = sc.nextLine();
		String s2[] = s1.split(" ");
		for (String s : s2) {
			int len = s.length();
			char c1 = Character.toUpperCase(s.charAt(0));
			char c2 = Character.toUpperCase(s.charAt(len - 1));
			if (len == 1)
				System.out.println(c1);
			else if (len == 2)
				System.out.println(Character.toString(c1) + Character.toString(c2));
			else {
				String str = Character.toString(c1) + s.substring(1, len - 2) + Character.toString(c1);
				System.out.println(str);
			}

		}
	}

}
