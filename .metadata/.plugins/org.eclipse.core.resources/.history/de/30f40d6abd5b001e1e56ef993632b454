		// TODO Auto-generated method stub
		
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter the string: ");
		String s1=sc.nextLine();
		String s2[]=s1.split(" ");
		for(String s:s2) {
			char c=s.charAt(0);
			s.charAt(0)=Character.toUpperCase(s.charAt(0));
		}
	}

